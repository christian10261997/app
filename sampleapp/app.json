{
  "expo": {
    "name": "KitchenPal",
    "slug": "KitchenPal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/playstore-icon.png",
    "scheme": "sampleapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos for payment reference verification.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for payment reference verification."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/mipmap-xxxhdpi/ic_launcher_foreground.png",
        "backgroundColor": "#ffffff"
      },
      "icon": "./assets/images/mipmap-xxxhdpi/ic_launcher.png",
      "edgeToEdgeEnabled": true,
      "package": "com.knightndgale.kitchenpal",
      "permissions": ["android.permission.CAMERA", "android.permission.READ_EXTERNAL_STORAGE", "android.permission.WRITE_EXTERNAL_STORAGE", "android.permission.RECORD_AUDIO"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/ic_launcher-web.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you select payment reference images.",
          "cameraPermission": "The app accesses your camera to let you take photos for payment reference verification."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0c16fb5c-3757-462a-b981-de859dc43ba9"
      }
    },
    "owner": "kithcen-pal-org"
  }
}
